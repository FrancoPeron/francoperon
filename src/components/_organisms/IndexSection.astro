---
interface Props {
  title: string;
  tagline: string;
}

const { title, tagline } = Astro.props;

---

<section class="flex flex-col w-full gap-16">
  <header class="flex flex-col justify-center items-center gap-4 ">
    <slot name="icon-slot" />
    <h3 class="text-5xl text-center font-normal">{title}</h3>
    <p class="text-2xl text-center">{tagline}</p>
  </header>
  <slot name="preview-slot" />
</section>

