---

import Icon from "@components/_atoms/icons/Icon.astro";
import type { iconPaths } from "@components/_atoms/icons/IconPaths";
/** Icon links to social media â€” edit these with links to your profiles! */
interface Props {
  size: string;
}

const { size = "18px" } = Astro.props;

const iconLinks: {
  label: string;
  href: string;
  icon: keyof typeof iconPaths;
}[] = [
  // { label: "email", href: "https://linkedin.com/me", icon: "email" },
  { label: "GitHub", href: "https://github.com/me", icon: "github-outline" },
  { label: "whatsapp", href: "https://linkedin.com/me", icon: "whatsapp" },
  { label: "dribbble", href: "https://dribbble.com/me", icon: "dribbble" },
  { label: "behance", href: "https://linkedin.com/me", icon: "behance" },
  { label: "linkedin", href: "https://linkedin.com/me", icon: "linkedin" },
];
---

<div class="flex flex-row md:hidden lg:flex gap-4">
  {
    iconLinks.map(({ href, icon, label }) => (
      <a href={href} class="flex text-[22px] text-white">
        <span class="sr-only">{label}</span>
        <Icon icon={icon} size={size} />
      </a>
    ))
  }
</div>
